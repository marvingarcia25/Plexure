    ViewData["Title"] = "Home page";
}


<div class="container">
    <div class="row row-cols-2">

        @* Left side bar *@
        <div class="col-sm-3">
            <div class="row side-bar-head">
                <div class="side-bar-head-text">
                    COMMERCIAL REAL ESTATE <br />
                    QOUTE TOOL
                </div>
            </div>
            <div class="row">
                <div class=" drop-down-title ">
                    What kind of property do you have?
                </div>

            </div>
            <div class="row">
                <div class="dropdown flatmenu property-kind-drop-down">
                    <button class="btn btn-outline-secondary property-kind-drop-down-button  btn-block chrome dropdown-toggle text-justify" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Multi-Family
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Option 1</a>
                        <a class="dropdown-item" href="#">Option 2</a>
